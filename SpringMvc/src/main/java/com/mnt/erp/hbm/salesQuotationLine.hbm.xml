<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.mnt.erp.bean.SalesQuotationLineBean" table="SalesQuotationLine">
		<id name="salesQuotationLineId" column="SalesQuotationLine_Id" type="int">
			<generator class="increment"></generator>
		</id>
		<property name="materialId" column="Material_Id"></property>
		<property name="quantity" column="Qty"></property>
		<property name="UOMId" column="UOM"></property>
		<property name="requiredDate" column="RequiredDate"></property>
		<property name="deliveryDate" column="DeliveryDate"></property>
		<property name="netPrice" column="NetPrice"></property>
		<property name="perUnit" column="PerUnit"></property>
		<property name="lineAmount" column="LineAmount"></property>
		<property name="currencyId" column="Currency_Id"></property>
		
		 <many-to-one name="material" cascade="all" not-null="true"
			class="com.mnt.erp.bean.Material" insert="false" update="false" lazy="false" fetch="join">
			<column name="Material_Id" not-null="true"></column>
		</many-to-one>
		
		<many-to-one name="currency" cascade="all" not-null="true"
			class="com.mnt.erp.bean.Currency" insert="false" update="false" lazy="false" fetch="join">
			<column name="Currency_Id" not-null="true"></column>
		</many-to-one>
		  
		<many-to-one name="uom" cascade="all" not-null="true"
			class="com.mnt.erp.bean.Uom" insert="false" update="false" lazy="false" fetch="join">
			<column name="UOM" not-null="true"></column>
		</many-to-one>

	</class>
</hibernate-mapping>