<key column="Employee_Id" not-null="true"></key>
<one-to-many  class="com.mnt.erp.bean.EmployeeManager"/>
</bag>   
  -->

</class>
<!-- Dashboard -->
<sql-query name="GetPendingLeaveRequest" callable="true" >
   <return-scalar column="EmployeeName" type="string"/>
   <return-scalar column="Department" type="string"/>
   <return-scalar column="LeaveType" type="string"/>
   <return-scalar column="Mobile" type="string"/>
   <return-scalar column="Status_Id" type="string"/>
      {call GetPendingLeaveRequest()}
    </sql-query> 
</hibernate-mapping>