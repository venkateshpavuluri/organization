<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
<class name="com.mnt.erp.bean.BreakTimeBean"  table="Breaktime">
<id name="breakTimeId" column="Breaktime_Id">
<generator class="increment"></generator>
</id>
<property name="breakTimecode" column="BreaktimeCode"></property>
<property name="starttime" column="Starttime"></property>
<property name="endtime" column="Endtime"></property>
<property name="length" column="Length"></property>
<property name="shift" column="Shift_Id"></property>
<property name="organization" column="Org_Id"></property>

		<many-to-one name="shiftBean" cascade="all"
			class="com.mnt.erp.bean.ShiftBean" not-null="true" insert="false" update="false">
			<column name="Shift_Id"/>
			</many-to-one>
			<many-to-one name="orgBean" cascade="all"
			class="com.mnt.erp.bean.Organization" not-null="true" insert="false" update="false">
			<column name="Org_Id"/>
			</many-to-one>
</class>
</hibernate-mapping>